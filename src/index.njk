---
layout: base
---

<h1>Creature World</h1>

<div class="timeline">
  <h2 class="timeline__title">Journey Thus Far</h2>
  {% for event in timeline %}
  <div class="event">
    <h5 class="event__time">{{ event.date }}</h5>
    <div class="event__marker"></div>
    <div class="event__line"></div>
    <h3 class="event__title">{{ event.title }}</h3>
    <p class="event__body">{{ event.body | striptags(true) | replace('{', '<a href="#">') | replace('}', '</a>') | nl2br | safe }}</p>
  </div>
  {% endfor %}
</div>