---
layout: base
---

<div id="rainbow"></div>

<header class="header">
  <button class="header__theme-toggle">
    Light / Dark
  </button>
</header>

<div class="splash hero">
  <div class="hero__earth-container">
    <model-viewer
      id="earth"
      alt="Creature World"
      src="/3d/creature-globe.glb"
      bounds="tight"
      amera-orbit="0deg 0deg 2.5m"
      camera-target="0m 0m 0m"
      camera-controls
      interaction-prompt="none"
      min-field-of-view="0deg"
      max-field-of-view="10deg"
      disable-zoom
      seamless-poster
      auto-rotate
      auto-rotate-delay="0"
      autoplay
    >
    </model-viewer>
  </div>
  <div class="hero__content">
    <h1 class="hero__title">Creature World</h1>
    <h2 class="hero__welcome">Welcome to the Creature World. You have arrived in a nearby magical dimension of love, divine intervention, and possibility.</h2>
    <nav class="hero__links">
    {% for link in links %}
      <a class="hero__link hero__link--{{ link.title | lower }}" href="{{ link.url }}" target="_blank">
        <img class="hero__link__icon" alt="{{ link.title }}" src="/img/{{ link.title | lower }}.svg" />
      </a>
    {% endfor %}
    </nav>
  </div>
</div>

<section>
  <h2>Journey Thus Far</h2>
  <div class="timeline grid">
  {% for event in timeline %}
    {% set el = 'div' if event.future else 'article' %}
    {% set modifier = 'future' if event.future else 'present' %}
    <{{el}} class="timeline__event timeline__event--{{ modifier }}">
      <h3>{{ event.title }}</h3>
      <h4>{{ event.date }}</h4>
      <p>{{ event.body | striptags(true) | replace('{', '<a href="' + event.linkUrl + '" target="_blank">') | replace('}', '</a>') | nl2br | safe }}</p>
    </{{el}}>
  {% endfor %}
  </div>
</section>

<section class="white-box">
  <h2>FAQ</h2>
  <div class="faq">
  {% for qa in faq %}
    <h3>{{ qa.question }}</h3>
    <p>{{ qa.answer }}</p>
  {% endfor %}
  </div>
</section>

<section>
  <h2>The Team</h2>
  <div class="team grid">
  {% for teammate in team %}
    <div class="team__avatar">
      <img class="team__avatar__image" src="/img/{{ teammate.creature }}.jpg" />
      <img class="team__avatar__eyes" src="/img/{{ teammate.creature }}-eyes.jpg">
    </div>
    <div class="team__info">
      <h3>{{ teammate.name }}</h3>
      <h4>{{ teammate.role }}</h4>
      <p>
        <a href="//twitter.com/{{ teammate.twitter }}" target="_blank">@{{ teammate.twitter }}</a>
      </p>
    </div>
  {% endfor %}
  </div>
</section>

<div class="splash footer">
  <h2>Enjoy your stay.</h2>
</div>