{
  "name": "creature.world",
  "version": "1.0.0",
  "description": "Welcome to The Creature World. You have arrived in a nearby magical dimension of love, divine intervention, and possibility.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf public",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch:webpack": "webpack --mode development --watch",
    "watch:eleventy": "eleventy --serve",
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "build:webpack": "webpack --mode production",
    "build:eleventy": "eleventy",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "start": "npm-run-all clean build:sass --parallel watch:*",
    "build": "npm-run-all clean build:sass build:eleventy"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "autoprefixer": "^9.8.7",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "three": "^0.135.0",
    "three-gltf-loader": "^1.111.0"
  }
}
